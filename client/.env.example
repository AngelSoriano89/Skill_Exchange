# ✅ URL del API backend
# Para desarrollo local:
REACT_APP_API_URL=http://localhost:5000/api

# Para producción:
# REACT_APP_API_URL=https://tu-dominio-backend.com/api

# ✅ Información de la aplicación
REACT_APP_APP_NAME=Skill Exchange
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Plataforma de intercambio de habilidades

# ✅ URLs de la aplicación (para compartir, etc.)
REACT_APP_BASE_URL=http://localhost:3000
# Para producción:
# REACT_APP_BASE_URL=https://tu-dominio-frontend.com

# ✅ Configuración de desarrollo
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=debug

# ✅ Configuración de funcionalidades
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_SUPPORTED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp

# ✅ URLs de servicios externos (si aplica)
# REACT_APP_GOOGLE_MAPS_API_KEY=tu_api_key_aqui
# REACT_APP_STRIPE_PUBLIC_KEY=pk_test_tu_key_aqui
# REACT_APP_SENTRY_DSN=https://tu_sentry_dsn_aqui

# ✅ Configuración de tema/UI
REACT_APP_THEME=default
REACT_APP_PRIMARY_COLOR=#3b82f6
REACT_APP_SECONDARY_COLOR=#64748b

# ✅ Feature flags
REACT_APP_ENABLE_RATINGS=true
REACT_APP_ENABLE_CHAT=false
REACT_APP_ENABLE_VIDEO_CALLS=false
REACT_APP_ENABLE_PAYMENTS=false

# ✅ Configuración de cache
REACT_APP_CACHE_DURATION=300000
