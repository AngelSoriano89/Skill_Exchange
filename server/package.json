{
  "name": "skill-exchange-server",
  "version": "1.0.0",
  "description": "Backend for the Skill Exchange platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build-react && npm run build-tailwind",
    "test": "jest --watch",
    "test:ci": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "seed": "node scripts/seedDatabase.js",
    "reset-db": "node scripts/resetDatabase.js"
  },
  "keywords": [
    "skill-exchange",
    "education",
    "learning",
    "api",
    "nodejs",
    "express",
    "mongodb",
    "jwt",
    "api"
  ],
  "author": "Grupo-A",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.11.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.6.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "models/**/*.js",
      "middleware/**/*.js",
      "!**/node_modules/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AngelSoriano89/inter-habil.git"
  },
  "bugs": {
    "url": "https://github.com/AngelSoriano89/inter-habil/issues"
  },
  "homepage": "https://github.com/AngelSoriano89/inter-habil#readme"
