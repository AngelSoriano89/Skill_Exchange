# âœ… Variables de entorno del servidor
NODE_ENV=development
PORT=5000

# Base de datos
MONGO_URI=mongodb://localhost:27017/skill-exchange

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-min-32-chars
JWT_EXPIRES_IN=7d

# CORS Configuration
CLIENT_URL=http://localhost:3000
CLIENT_URLS=http://localhost:3000,http://127.0.0.1:3000

# File upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email configuration (futuro)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# Development
DEBUG_MODE=true
LOG_LEVEL=debug
