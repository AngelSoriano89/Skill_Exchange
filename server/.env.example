# Configuración de la base de datos MongoDB
MONGO_URI=mongodb://localhost:27017/skill-exchange

# Secreto para JWT (debe ser una cadena aleatoria y segura en producción)
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui_cambialo_en_produccion

# Puerto del servidor (opcional, por defecto es 5000)
PORT=5000

# Entorno de la aplicación
NODE_ENV=development

# URL del frontend para CORS (separadas por comas si hay múltiples)
CLIENT_URLS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Configuración para uploads (opcional)
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp

# Configuración para emails (opcional - para futuras funcionalidades)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=tu-email@gmail.com
# SMTP_PASS=tu-app-password

# Configuración de rate limiting (opcional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Base URL para archivos estáticos
BASE_URL=http://localhost:5000
